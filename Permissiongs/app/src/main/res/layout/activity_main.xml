<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.wq.permissiongs.MainActivity">

    <Button
        android:text="Request Permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="requestPermission"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment"
        android:onClick="requestPermessionInFragment"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Permission"
        android:onClick="specialPermission"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PermissionGen Lib"
        android:onClick="genPermission"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cust Permission"
        android:onClick="custPermission"/>


</LinearLayout>
